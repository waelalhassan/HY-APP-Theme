        meta(name="description", content="")
        meta(name="keywords", content="")
        title Contact Us
        link(rel="stylesheet", href="css/bootstrap-grid.min.css")
        link(rel="stylesheet", href="css/style.css")
    body 

        // add new class for about page for styling

        //-start header
        header(style="box-shadow: none")
            .container 
                nav
                    .logo
                        h1: a(href="#") logo
                    ul
                        li.item: a(href="index.html") Home
                        li.item: a(href="#") About
                        li.item: a(href="#") Contact Us
        //-end header

        section.contact 
            .container 
                h2 Get In Touch
                div(class="rwo get-in-touch")
                    .col-sm-6
                        h3 Leave us a message
                        form
                            input(type="text", name="name", placeholder="Full Name") 
                            input(type="email", name="email", placeholder="Email Address") 
                            textarea
                            input(type="submit", value="Send", placeholder="Your Message") 
                    .col-sm-6
                        div(class="info-contact")
                            address #[img(src="#", alt="")] Infomation technologies building, Victoria Island Lagos, Nigeria
                            p #[img(src="#", alt="")] +234 081-1236-4568
                            p #[img(src="#", alt="")] hello@info.com

                            
        //-start footer
        include footer.pug
